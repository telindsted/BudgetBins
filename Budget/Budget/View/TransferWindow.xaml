<Window x:Class="Budget.View.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Budget.View"
        mc:Ignorable="d"
        Title="Transfer Funds" Height="200" Width="300"
        ResizeMode="CanMinimize">
    <StackPanel>
        <TextBox x:Name="AmountBox" Margin="5" Text="Enter amount here"/>
        <ComboBox x:Name="FromBox" Margin="5"/>
        <TextBlock Text="To" HorizontalAlignment="Center" Margin="5"/>
        <ComboBox x:Name="ToBox" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OkButton" Content="Ok" IsDefault="True" Margin="5"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" Margin="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
